    @* ReSharper disable once PossibleNullReferenceException *@
    <script type="text/javascript">
        require(["jquery", "Main"], function ($) {
            @*获得访问的Action*@
            var x = '@ViewContext.RouteData.Route.GetRouteData(Context).Values["action"]';
            @*判断应该指中那个导航块*@
            switch (x) {
                case "Main":
                    $('a:contains("Main")').addClass("active");
                    break;
                case "Web":
                    $('a:contains("js/Web")').addClass("active");
                    break;
                case "CSharp":
                    $('a:contains("C#")').addClass("active");
                    break;
                case "Mvc":
                    $('a:contains("Mvc")').addClass("active");
                    break;
                case "Project":
                    $('a:contains("Project")').addClass("active");
                    break;
                case "Tool":
                    $('a:contains("Tool")').addClass("active");
                    break;
                case "Other":
                    $('a:contains("Other")').addClass("active");
                    break;
                case "About":
                    $('a:contains("About")').addClass("active");
                    break;
                case "Teacher_J":
                    $('a:contains("Teacher_J")').addClass("active");
                    break;
                default:
                    $('a:contains("Home")').addClass("active");
                    break;
            }
            @*TODO 页数判断需要做*@

            @RenderSection("scripts", required: false)
        })
    </script>
